{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        // Enable latest features
        "types": ["node", "bun"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["es2015", "es2018", "es2020", "dom", "esnext"],
        "baseUrl": ".",
        "rootDir": "./src",
        "sourceRoot": "./src/",
        "sourceMap": true,
        "outDir": "./dist/"
    },
    "include": ["./src/**/*", "./src/browser", "./src/node"],
    "exclude": [
        "./node_modules",
        "./node_modules/**/*",
        "./node_modules/*",
        "./dist/",
        "./dist/*",
        "./eslint.config.mjs",
        "./tests/*"
    ]
}
