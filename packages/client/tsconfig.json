{
    "extends": "./tsconfig-build.json",
    "compilerOptions": {
        "esModuleInterop": true,
        // Enable latest features
        "types": ["node", "bun"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "lib": ["ES2015", "ES2018", "ESNext", "ES2020", "DOM", "DOM.Iterable"],
        "baseUrl": ".",
        "rootDir": ".",
        "sourceRoot": "./",
        "sourceMap": true,
        "outDir": "./dist/"
    },
    "include": ["./tests", "./tests/*", "./tests/**/*", "./src/**/*", "./src/browser", "./src/node"],
    "exclude": [
        "./node_modules",
        "./node_modules/**/*",
        "./node_modules/*",
        "./dist/",
        "./dist/*",
        "./eslint.config.mjs"
    ]
}
